---
import H1 from "@/components/H1.astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const services = await getCollection("services");
---

<Layout title="الخدمات الابداعية">
    <H1 text="الخدمات الابداعية" />
  
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {services.map((service: CollectionEntry<"services">) => (
        <a
          href={`/services/${service.slug}`}
          class="bg-white border-zinc-300 text-black rounded-xl p-2 hover:scale-[1.01] transition-all flex flex-col"
        >
          <div class="rounded-lg overflow-hidden mb-4">
            <img
              src={service.data.image}
              alt={service.data.title}
              class="w-full h-40 object-cover"
              loading="lazy"
            />
          </div>
          <div class="px-2">
            <h3 class="text-2xl font-bold mb-2 font-arabic">
              {service.data.title}
            </h3>
            <p class="text-sm text-zinc-800 leading-relaxed">
              {service.data.Subetitle}
            </p>
          </div>
        </a>
      ))}
    </div>
  </Layout>
  