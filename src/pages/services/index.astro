---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import ServiceCard from "@/components/content/Services.astro";
import SEO from "@/components/astro/SEO.astro";
import H1 from "@/components/astro/H1.astro";
import CallToAction from "@/components/astro/CallToAction.astro";
import { SiteConfig } from "@/data/config";

const AppName = SiteConfig.AppName;
type ServiceEntry = CollectionEntry<"services">;

const services = await getCollection("services");
---

<Layout>
  <SEO
    title="الخدمات"
    description=""
    url={`${AppName}/services`}
    image="/assets/og-image.png"
  />

  <section id="services">
    <H1 text="الخدمات" />

    <div class="services-grid my-4">
      {
        services.map((service: ServiceEntry) => (
          <ServiceCard service={service} />
        ))
      }
    </div>

    <CallToAction />
  </section>
</Layout>
