---
import { SiteConfig } from "@/data/config";
import { navbarLinks } from "@/data/navbar";
import Logo from "./Logo.astro";
import { Menu } from "@lucide/astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
---

<header
  class="relative flex justify-between items-center p-4 mb-5 bg-white dark:bg-zinc-900 rounded-md"
>
  <div class="text-xl font-bold"><Logo /></div>
  <div class="flex">
    <ThemeToggle />
    <button
      id="menu-toggle"
      class="text-base font-medium"
      aria-expanded="false"
      aria-controls="mobile-menu"
      ><Menu class="text-black dark:text-white" /></button
    >
  </div>

  <nav
    id="mobile-menu"
    class="absolute left-0 right-0 px-10 top-full bg-white dark:bg-zinc-900 z-40 overflow-hidden transition-all duration-300 flex-col items-center space-y-4 text-base font-medium"
    style="max-height: 0;"
  >
    {
      navbarLinks.map((link) => (
        <a
          href={link.url}
          class="block py-2 text-gray-700 dark:text-white hover:text-brand-dark"
        >
          {link.title}
        </a>
      ))
    }
  </nav>

  <script type="module" is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const menu = document.getElementById("mobile-menu");
      const toggleBtn = document.getElementById("menu-toggle");

      let isOpen = false;
      toggleBtn.setAttribute("aria-expanded", isOpen);

      toggleBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        isOpen = !isOpen;
        if (isOpen) {
          menu.style.maxHeight = menu.scrollHeight + "px";
        } else {
          menu.style.maxHeight = "0px";
        }
      });

      document.addEventListener("click", (e) => {
        if (
          isOpen &&
          !menu.contains(e.target) &&
          !toggleBtn.contains(e.target)
        ) {
          isOpen = false;
          menu.style.maxHeight = "0px";
        }
      });
    });
  </script>
</header>
