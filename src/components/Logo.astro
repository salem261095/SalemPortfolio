---
import { SiteConfig } from "@/data/config";
---

<a href="/" class="flex items-center gap-3 overflow-hidden">
  <img
    src="/assets/SalemLogo.png"
    alt="Logo"
    class="w-10 h-10 rounded-md object-cover"
  />
  <div class="flex flex-col leading-tight">
    <h2
      class="text-lg font-bold font-arabic text-gray-900 dark:text-white truncate"
    >
      <img src="/assets/logo-light.svg" alt={SiteConfig.AppName} />
    </h2>
    <p class="text-xs font-kunkun text-gray-600 mt-0.5">
      {SiteConfig.About}
    </p>
  </div>
</a>
