---
import WebProjects from "@/data/WebProject.json";
import Button from "./Button.astro";
import SecTitle from "./SecTitle.astro";
---

<section class="py-12 px-4">
  <SecTitle text="مشاريع تطوير الويب" />
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    {
      WebProjects.map((WebProject) => (
        <a
          href={WebProject.link}
          class="bg-white border-zinc-300 text-black rounded-xl p-2 hover:scale-[1.01] transition-all flex flex-col"
        >
          <div class="rounded-lg overflow-hidden mb-4">
            <img
              src={WebProject.image}
              alt={WebProject.title}
              class="w-full h-40 object-cover"
              loading="lazy"
            />
          </div>
          <div class="px-2">
            <h3 class="text-2xl font-bold mb-2 font-arabic">{WebProject.title}</h3>
            <p class="text-sm text-zinc-800 leading-relaxed">
              {WebProject.description}
            </p>
          </div>
        </a>
      ))
    }
  </div>
  <div class="pt-4 text-center inline-block">
    <Button link="#portfolio" text="عرض جميع المشاريع" />
  </div>
</section>
